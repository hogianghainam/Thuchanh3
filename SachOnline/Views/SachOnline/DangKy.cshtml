
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }

    h4 {
        color: red;
        text-align: center;
    }

    h2 {
        text-align: center;
    }

    table {
        margin: 0 auto;
    }

    td {
        padding: 5px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 5px;
    }

    input[type="submit"],
    input[type="reset"] {
        padding: 5px 10px;
        background-color: #007BFF;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    input[type="submit"]:hover,
        input[type="reset"]:hover {
            background-color: #0056b3;
        }    
</style>
<script type="text/javascript">
    $(document).ready(function () {
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            alert(successMessage);
        }
    });
</script>


<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "SachOnline"))
    {
        @Html.ValidationSummary(true)
        <tr>
            <td>Họ tên:</td>
            <td>@Html.TextBox("TenKhachHang") @ViewData["err1"]</td>
        </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>

        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("SoDienThoai") @ViewData["err6"]</td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" /> <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
    }
</table>

